@model Gestao_Software.Models.Collaborator

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Colaborador</h4>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CollaboratorId" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="Funcao" class="control-label"></label>
                <input asp-for="Funcao" class="form-control" />
                <span asp-validation-for="Funcao" class="text-danger"></span>
            </div>
            <br>
            <div class="text-center">
                <input type="submit" value="Editar" class="btn btn-success" />
            </div>
            <br>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Collaborators" asp-action="List" class="btn btn-secondary btn-sm">&laquo; Voltar &raquo;</a>
</div>

<!--Divider-->
<div class="divider-custom divider-light">
    <div class="divider-custom-line"></div>
    <div class="divider-custom-line"></div>
    <div class="divider-custom-line"></div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
