@model Gestao_Software.Models.Client

@{
    ViewData["Title"] = "Create";
}

<h1>Novo Cliente</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row">
                <label asp-for="Nome">Cliente</label>
                <input asp-for="Nome" class="form-control" placeholder="Nome do Cliente" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="Endereco">Endereco</label>
                <input asp-for="Endereco" class="form-control" placeholder="Endereço" />
                <span asp-validation-for="Endereco" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <label asp-for="Telefone">Telefone</label>
                <input asp-for="Telefone" class="form-control" placeholder="Telefone" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <br>
            <div class="text-center">
                <input type="submit" value="Criar" class="btn btn-success" />
            </div>
            <br>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary btn-sm">&laquo; Voltar &raquo;</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
